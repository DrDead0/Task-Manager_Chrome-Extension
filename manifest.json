{
    "manifest_version": 3,
    "name": "Task Manager",
    "description": "Manage your tasks right in your browser!",
    "version": "1.0",
    "permissions": ["storage", "notifications", "alarms"],
    "action": {
      "default_popup": "options.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "options_page": "options.html",
    "web_accessible_resources": [
      {
        "resources": ["icon.png"], 
        "matches": ["<all_urls>"]
      }
    ]
  }
  